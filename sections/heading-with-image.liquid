{{ 'section-heading-with-image.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.image_height == 'adapt' and section.settings.image != blank -%}
    .heading-with-image__media-{{ section.id }}::before {
      padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
      content: '';
      display: block;
    }
  {%- endif -%}
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="{% if section.settings.full_width %}heading-with-image--full-width{% else %}page-width{% endif %}">
    <div class="heading-with-image isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
        <div class="heading-with-image__content heading-with-image__content--{{ section.settings.text_alignment }}">
          {%- if section.settings.heading != blank -%}
            <h2 class="heading-with-image__heading inline-richtext {{ section.settings.heading_size }}">
              {{ section.settings.heading }}
            </h2>
          {%- endif -%}
          {%- if section.settings.subheading != blank -%}
            <div class="heading-with-image__subheading rte">
              {{ section.settings.subheading }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.settings.image != blank -%}
        <div class="heading-with-image__media heading-with-image__media-{{ section.id }} heading-with-image__media--{{ section.settings.image_height }} media{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
          {%- liquid
            assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            if section.settings.full_width
              assign sizes = '100vw'
            else
              assign sizes = '(min-width: 1200px) 1100px, (min-width: 750px) calc(100vw - 100px), calc(100vw - 30px)'
            endif
          -%}
          {{
            section.settings.image
            | image_url: width: 3840
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths, fetchpriority: fetch_priority
          }}
        </div>
      {%- else -%}
        <div class="heading-with-image__media heading-with-image__media--{{ section.settings.image_height }} placeholder">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Heading with Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "見出し"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "小"
        },
        {
          "value": "h1",
          "label": "中"
        },
        {
          "value": "h0",
          "label": "大"
        }
      ],
      "default": "h1",
      "label": "見出しサイズ"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "サブテキスト"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "左"
        },
        {
          "value": "center",
          "label": "中央"
        },
        {
          "value": "right",
          "label": "右"
        }
      ],
      "default": "center",
      "label": "テキスト配置"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "画像"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "adapt",
          "label": "画像に合わせる"
        },
        {
          "value": "small",
          "label": "小"
        },
        {
          "value": "medium",
          "label": "中"
        },
        {
          "value": "large",
          "label": "大"
        }
      ],
      "default": "medium",
      "label": "画像の高さ"
    },
    {
      "type": "select",
      "id": "image_behavior",
      "options": [
        {
          "value": "none",
          "label": "なし"
        },
        {
          "value": "ambient",
          "label": "アンビエント"
        },
        {
          "value": "zoom-in",
          "label": "ズームイン"
        }
      ],
      "default": "none",
      "label": "画像エフェクト",
      "info": "ホバー時の動作"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "全幅表示"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "カラースキーム",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上部パディング",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下部パディング",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Heading with Image"
    }
  ]
}
{% endschema %}
