{{ 'vimeo-videos.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .vimeo-grid--{{ section.id }} {
    gap: {{ section.settings.grid_gap | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .vimeo-grid--{{ section.id }} {
      gap: {{ section.settings.grid_gap }}px;
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="vimeo-videos-section isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    {%- unless section.settings.heading == blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      </div>
    {%- endunless -%}

    {%- if section.blocks.size > 0 -%}
      <div class="vimeo-grid vimeo-grid--{{ section.id }} vimeo-grid--{{ section.settings.columns_mobile }}-col-mobile">
        {%- for block in section.blocks -%}
          {%- liquid
            assign video_id = ''
            if block.settings.vimeo_url contains 'vimeo.com/'
              assign url_parts = block.settings.vimeo_url | split: 'vimeo.com/'
              assign video_id = url_parts[1] | split: '/' | first | split: '?' | first
            elsif block.settings.vimeo_url != blank
              assign video_id = block.settings.vimeo_url
            endif

            assign autoplay = 0
            if block.settings.autoplay
              assign autoplay = 1
            endif

            assign loop = 0
            if block.settings.loop
              assign loop = 1
            endif

            assign muted = 0
            if block.settings.muted
              assign muted = 1
            endif

            assign controls = 1
            if block.settings.hide_controls
              assign controls = 0
            endif

            assign background_mode = 0
            if block.settings.background_mode
              assign background_mode = 1
            endif

            assign playsinline = 1
            assign quality = 'auto'
            if block.settings.quality != blank
              assign quality = block.settings.quality
            endif
          -%}

          {%- if video_id != blank -%}
            <div class="vimeo-video-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}{% if block.settings.background_mode %} vimeo-video-item--background{% endif %}" {{ block.shopify_attributes }}>
              {%- unless block.settings.title == blank -%}
                <h3 class="vimeo-video-item__title h4">{{ block.settings.title }}</h3>
              {%- endunless -%}

              <div class="vimeo-video-item__wrapper{% if block.settings.background_mode %} vimeo-video-item__wrapper--background{% endif %}" style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;">
                <iframe
                  src="https://player.vimeo.com/video/{{ video_id }}?autoplay={{ autoplay }}&loop={{ loop }}&muted={{ muted }}&controls={{ controls }}&title={{ block.settings.show_title }}&byline={{ block.settings.show_byline }}&portrait={{ block.settings.show_portrait }}&background={{ background_mode }}&playsinline={{ playsinline }}&quality={{ quality }}&dnt=1&transparent=0"
                  style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                  frameborder="0"
                  allow="autoplay; fullscreen; picture-in-picture"
                  allowfullscreen
                  title="{{ block.settings.title | escape }}"
                ></iframe>
              </div>

              {%- unless block.settings.description == blank -%}
                <div class="vimeo-video-item__description rte">
                  {{ block.settings.description }}
                </div>
              {%- endunless -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="vimeo-videos-placeholder">
        <p>{{ 'sections.vimeo_videos.no_videos' | t: default: 'ブロックを追加してVimeoビデオを表示してください' }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

