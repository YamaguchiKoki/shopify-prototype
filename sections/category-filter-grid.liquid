  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Category Filter",
      "label": "t:sections.category-filter-grid.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
