      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.category-filter-grid.settings.header_image.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.category-filter-grid.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.category-filter-grid.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.category-filter-grid.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.category-filter-grid.settings.image_ratio.label"
    },
    {
      "type": "header",
      "content": "t:sections.category-filter-grid.settings.header_mobile.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "t:sections.category-filter-grid.settings.columns_mobile.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.category-filter-grid.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.category-filter-grid.settings.columns_mobile.options__2.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.category-filter-grid.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "t:sections.category-filter-grid.blocks.category.name",
      "settings": [
        {
          "type": "text",
          "id": "category_name",
          "label": "t:sections.category-filter-grid.blocks.category.settings.category_name.label",
          "default": "Category Name"
