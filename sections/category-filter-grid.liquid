        {
          "type": "select",
          "id": "metafield_type",
          "label": "t:sections.category-filter-grid.blocks.category.settings.metafield_type.label",
          "options": [
            {
              "value": "zodiac",
              "label": "t:sections.category-filter-grid.blocks.category.settings.metafield_type.options__1.label"
            },
            {
              "value": "collaboration_type",
              "label": "t:sections.category-filter-grid.blocks.category.settings.metafield_type.options__2.label"
            }
          ],
          "default": "zodiac"
        },
        {
          "type": "text",
          "id": "filter_value",
          "label": "t:sections.category-filter-grid.blocks.category.settings.filter_value.label",
          "info": "t:sections.category-filter-grid.blocks.category.settings.filter_value.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.category-filter-grid.presets.name",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
