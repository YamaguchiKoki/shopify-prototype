{{ 'section-map-with-image.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .map-with-image-{{ section.id }} {
    gap: {{ section.settings.gap }}px;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="{% if section.settings.full_width %}map-with-image--full-width{% else %}page-width{% endif %}">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="map-with-image__header map-with-image__header--{{ section.settings.text_alignment }}">
        {%- if section.settings.heading != blank -%}
          <h2 class="map-with-image__heading inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <div class="map-with-image__subheading rte">
            {{ section.settings.subheading }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="map-with-image map-with-image-{{ section.id }} map-with-image--height-{{ section.settings.height }}{% if section.settings.layout == 'image_first' %} map-with-image--reverse{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

      {%- comment -%} Google Map {%- endcomment -%}
      <div class="map-with-image__map">
        {%- if section.settings.map_url != blank -%}
          {%- liquid
            assign iframe_start = section.settings.map_url | split: '<iframe' | last
            if iframe_start != section.settings.map_url
              assign iframe_content = iframe_start | split: '</iframe>' | first
              assign iframe_tag = '<iframe' | append: iframe_content | append: '</iframe>'
            else
              assign iframe_tag = section.settings.map_url
            endif
          -%}
          <div class="map-with-image__map-container">
            {{ iframe_tag }}
          </div>
        {%- else -%}
          <div class="map-with-image__map-placeholder placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
            <p>{{ 'sections.map_with_image.map_placeholder' | t }}</p>
          </div>
        {%- endif -%}
      </div>

      {%- comment -%} Image {%- endcomment -%}
      <div class="map-with-image__image">
        {%- if section.settings.image != blank -%}
          <div class="map-with-image__image-container media">
            {%- liquid
              assign widths = '375, 550, 750, 1100, 1500, 1780, 2000'
              if section.settings.full_width
                assign sizes = '50vw'
              else
                assign sizes = '(min-width: 1200px) 550px, (min-width: 750px) 50vw, 100vw'
              endif
            -%}
            {{
              section.settings.image
              | image_url: width: 2000
              | image_tag: loading: 'lazy', sizes: sizes, widths: widths
            }}
          </div>
        {%- else -%}
          <div class="map-with-image__image-placeholder placeholder">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Map with Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "見出し"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "小"
        },
        {
          "value": "h1",
          "label": "中"
        },
        {
          "value": "h0",
          "label": "大"
        }
      ],
      "default": "h1",
      "label": "見出しサイズ"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "サブテキスト"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "左"
        },
        {
          "value": "center",
          "label": "中央"
        },
        {
          "value": "right",
          "label": "右"
        }
      ],
      "default": "center",
      "label": "テキスト配置"
    },
    {
      "type": "html",
      "id": "map_url",
      "label": "Google Map 埋め込みコード",
      "info": "Google Mapの「共有」→「地図を埋め込む」からiframeコードをコピーして貼り付けてください"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "画像"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "map_first",
          "label": "マップを左に配置"
        },
        {
          "value": "image_first",
          "label": "画像を左に配置"
        }
      ],
      "default": "map_first",
      "label": "レイアウト"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "small",
          "label": "小"
        },
        {
          "value": "medium",
          "label": "中"
        },
        {
          "value": "large",
          "label": "大"
        }
      ],
      "default": "medium",
      "label": "高さ"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "マップと画像の距離",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "全幅表示"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "カラースキーム",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上部パディング",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下部パディング",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Map with Image"
    }
  ]
}
{% endschema %}
